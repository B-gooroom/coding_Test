SELECT
  lgb.TITLE,
  lgb.BOARD_ID,
  lgr.REPLY_ID,
  lgr.WRITER_ID,
  lgr.CONTENTS,
  DATE_FORMAT(lgr.CREATED_DATE, '%Y-%m-%d') AS CREATED_DATE
FROM USED_GOODS_BOARD lgb
  LEFT JOIN USED_GOODS_REPLY lgr
    ON lgb.BOARD_ID = lgr.BOARD_ID
WHERE lgr.REPLY_ID IS NOT NULL
  AND lgb.CREATED_DATE BETWEEN '2022-10-01' AND '2022-10-31'
ORDER BY lgr.CREATED_DATE ASC, lgb.TITLE ASC
